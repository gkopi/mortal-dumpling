{% extends 'MortalDumplingBundle::base.html.twig' %}
{% block style %}
	{{ parent() }}
	body {
  		  background: url(/bundles/mortaldumpling/images/table1.jpg) no-repeat center;
		  -webkit-background-size: cover;
		  -moz-background-size: cover;
		  -o-background-size: cover;
		  background-size: cover;
 	}
{% endblock style %}

{% block content %}
	{{parent()}} 
<div id="container" class="js-isotope"
  data-isotope-options='{ "itemSelector": ".item" }'>
  		{% block content_blocks %} 
			{% for content_block in content.content_blocks %}
		    	{{ include('MortalDumplingBundle:Dumpling:ContentBlock.html.twig') }}
		    {% endfor %}
		{% endblock content_blocks %}
	</div>	
{% endblock content%}